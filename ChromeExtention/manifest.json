{
	"manifest_version": 2,

	"name": "Anona google extention",
	"description": "Using this extention one will be able to protect his chat application from stranger use by using the anona AI mechanism",
	"version": "0.0.1",

	"icons": {"16": "anonaIcon16.png",
					"48": "anonaIcon48.png",
					"128": "anonaIcon128.png"},

		"browser_action": {
			"default_icon": "anonaIcon128.png",
			"default_title": "Anona AI",
			"default_popup": "popUp.html"
		},
	
	"content_scripts": [
    {
        "matches": ["https://web.whatsapp.com/*", "http://www.yourhtmlsource.com/forms/basicforms.html"],
        "js": ["anonaClient.js"]
    }
],
	
    "permissions": [
      "input",
	  "tabs"
    ]
}