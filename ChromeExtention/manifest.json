{
	"manifest_version": 2,

	"name": "Anona google extention",
	"description": "Using this extension one will be able to protect his chat application from stranger use by using the anona AI mechanism",
	"version": "0.0.1",
	"icons": {"16": "anonaIcon16.png",
					"48": "anonaIcon48.png",
					"128": "anonaIcon128.png"},

		"browser_action": {
			"default_icon": "anonaIcon128.png",
			"default_title": "Anona AI",
			"default_popup": "popUpMain.html"
		},

"content_security_policy": "script-src 'self' https://www.gstatic.com https://*.firebaseio.com https://*.firebaseio.com; object-src 'self'",	"content_scripts": [
    {
        "matches": ["https://web.whatsapp.com/*"],
        "js": ["anonaClient.js"]
    }
	],
	
	"background": {
	  	"page": "sendToFireBase.html",
	  	"persistent": true
	},
    "permissions": [
      "input",
	  "tabs",
	  "identity"
    ]
}